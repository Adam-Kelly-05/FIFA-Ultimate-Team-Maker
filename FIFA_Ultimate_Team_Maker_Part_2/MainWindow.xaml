<Window x:Class="FIFA_Ultimate_Team_Maker_Part_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FIFA_Ultimate_Team_Maker_Part_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
        <Grid ShowGridLines="True" Background="Black">
            <TextBlock HorizontalAlignment="Center" Margin="0,111,0,0" TextWrapping="Wrap" Text="FIFA Ultimate Team Maker" VerticalAlignment="Top" FontWeight="Bold" FontSize="34" Foreground="White"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,164,0,0" TextWrapping="Wrap" Text="Enter Your Budget In Millions (0 is unlimited)" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Foreground="White"/>
            <TextBox Text="0" x:Name="Budget_TXTBX" HorizontalAlignment="Center" Margin="0,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" FontSize="18" BorderBrush="White" Background="Black" Foreground="White" SelectionBrush="{x:Null}"/>
            <Button x:Name="StartGame_BTN" Content="Start Game" HorizontalAlignment="Center" Margin="0,224,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="122" FontSize="18" Click="StartGame_BTN_Click" BorderBrush="White" Foreground="White" Background="Black"/>
        </Grid>
</Window>
